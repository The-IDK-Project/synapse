server:
  name: "synapse"
  version: "0.1.0"
  domain: "example.org"
  port: 8008
  federation_port: 8448
  bind_address: "0.0.0.0"
  public_baseurl: "https://matrix.example.org"

database:
  type: "postgresql"
  connection_string: "postgresql://matrix:matrix_password@localhost:5432/matrix"
  pool_size: 10
  max_connections: 50

redis:
  enabled: true
  host: "localhost"
  port: 6379
  password: ""
  database: 0

logging:
  level: "info"
  file: "logs/matrix-server.log"
  max_size: 100MB
  max_files: 10
  console: true

tls:
  enabled: false
  certificate_file: "keys/cert.pem"
  private_key_file: "keys/key.pem"

federation:
  enabled: true
  verify_keys: true
  timeout: 30s
  retry_attempts: 3

rate_limiting:
  enabled: true
  requests_per_minute: 100
  burst_size: 20

cache:
  room_state_ttl: 3600
  user_profile_ttl: 1800
  event_cache_size: 10000

media:
  storage_path: "data/media"
  max_file_size: 10GB
  allowed_types: ["image/jpeg", "image/png", "video/mp4"]

users:
  registration: true
  guest_access: false
  require_authentication: true

rooms:
  max_state_events: 10000
  max_message_length: 65536
  encryption: true

metrics:
  enabled: true
  port: 9090
  path: "/metrics"